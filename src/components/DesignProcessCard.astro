---
import clsx from 'clsx'

export interface Props {
  step: string
  title: string
  className: string
}

const { step, title, className } = Astro.props
---

<div
  class={clsx(
    'flex flex-col items-center relative rounded-[32px] px-3 pb-2 box-border h-[180px] max-md:rounded-xl max-md:h-24 max-md:text-xs',
    className
  )}
>
  <div class='step bg-white text-center w-20 h-10 max-sm:w-10 max-sm:h-5'>
    {step}
  </div>
  <div class='text-center h-full grid place-content-start pt-5'>
    <div class='font-semibold'>{title}</div>
    <div class='text-center max-sm:hidden'>
      <slot name='caption' />
    </div>
  </div>
</div>

<style>
  .step {
    border-bottom-left-radius: 100px;
    border-bottom-right-radius: 100px;
  }
</style>
