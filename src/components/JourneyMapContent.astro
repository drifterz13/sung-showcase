---
export interface Props {
  content: string
  highlight?: boolean
}

import clsx from 'clsx'
const { content, highlight } = Astro.props
---

<div
  class={clsx(
    'rounded-3xl h-full grid place-content-center text-sm xl:text-base px-4 py-2',
    highlight ? 'bg-purple-300 font-nunito' : 'bg-white font-mitr'
  )}
>
  <p class='text-center'>
    {content}
  </p>
</div>
