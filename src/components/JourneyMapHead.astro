---
export interface Props {
  title: string
  directionIndicator?: boolean
}

const { title, directionIndicator } = Astro.props
---

<div
  class='rounded-3xl bg-black text-white p-3 text-center flex gap-3 justify-center items-center'
>
  <div>{title}</div>
  {
    directionIndicator ? (
      <span role='img'>
        <svg
          xmlns='http://www.w3.org/2000/svg'
          fill='none'
          viewBox='0 0 24 24'
          stroke-width='1.5'
          stroke='currentColor'
          class='w-6 h-6'
        >
          <path
            stroke-linecap='round'
            stroke-linejoin='round'
            d='M8.25 4.5l7.5 7.5-7.5 7.5'
          />
        </svg>
      </span>
    ) : null
  }
</div>
