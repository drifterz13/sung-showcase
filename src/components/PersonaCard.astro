---
export interface Props {
  title: string
  lists: string[]
}

const { title, lists } = Astro.props
---

<div class='flex flex-col gap-5'>
  <div class='px-4 py-2 rounded-2xl text-white bg-black w-fit'>
    {title}
  </div>

  <ul class='font-mitr'>
    {lists.map((list) => <li class='list-disc list-inside'>{list}</li>)}
  </ul>
</div>
