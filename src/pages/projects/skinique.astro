---
import skiniqueLogo from '../../images/skinique-logo.png'
import Layout from '../../layouts/Layout.astro'
import roleIllustrator from '../../images/role-illus.svg'
import projectTimeIllustrator from '../../images/project-time-illus.svg'
import toolsUsedIllustrator from '../../images/tools-used-illus.svg'
import InterviewTable from '../../components/InterviewTable.astro'
import DesignProcess from '../../components/DesignProcess.astro'
import PainPoints from '../../components/PainPoints.astro'
import EmpathyMap from '../../components/EmpathyMap.astro'
import Persona from '../../components/Persona.astro'
import UserJourneyMap from '../../components/UserJourneyMap.astro'
import appMapImg from '../../images/app-map.png'
import wireFrameImg from '../../images/wire-frame.png'
import DesignSystem from '../../components/DesignSystem.astro'
---

<Layout title='Skinique - Project'>
  <section
    class='h-screen box-border w-full bg-purple-100 pt-10 px-14 grid grid-cols-4'
  >
    <div class='flex flex-col text-orange col-span-2'>
      <img class='h-[108px] w-[108px]' src={skiniqueLogo} alt='Skinique logo' />
      <div class='mt-auto mb-20'>
        <h1 class='text-[128px] font-arima capitalize'>Skinique</h1>
        <p class='text-3xl'>Create a skincare routine as unique as you.</p>
      </div>
    </div>
    <div
      class='col-span-2 bg-iphoneMockup bg-transparent bg-no-repeat bg-contain bg-bottom'
    >
    </div>
  </section>

  <section class='mt-28'>
    <h1 class='text-4xl text-center text-orange font-semibold'>
      Roles & Responsibilities
    </h1>
    <div class='flex gap-20 justify-center items-center mt-14'>
      <article class='flex flex-col items-center gap-4'>
        <img src={roleIllustrator} alt='Role illustrator' />
        <div class='text-center w-full'>
          <div class='text-2xl font-semibold'>My Role</div>
          <div class='text-base'>Ux/Ui Designer</div>
        </div>
      </article>
      <article class='flex flex-col items-center gap-5'>
        <img
          class='w-[350px]'
          src={projectTimeIllustrator}
          alt='Project time illustrator'
        />
        <div class='text-center w-full'>
          <div class='text-2xl font-semibold'>Project time</div>
          <div class='text-base'>September 2022</div>
        </div>
      </article>
      <article class='flex flex-col items-center gap-4'>
        <img src={toolsUsedIllustrator} alt='Tools used illustrator' />
        <div class='text-center w-full'>
          <div class='text-2xl font-semibold'>Tool used</div>
          <div class='text-base'>Figma</div>
        </div>
      </article>
    </div>
  </section>

  <section class='mt-28'>
    <div class='mx-48'>
      <h1 class='text-4xl text-center text-orange font-semibold'>
        Pain Points
      </h1>
      <PainPoints />
    </div>
  </section>

  <section class='mt-28'>
    <div class='grid grid-cols-2 mx-48 h-[450px]'>
      <div
        class='col-span-1 bg-iphoneMockup2 bg-transparent bg-no-repeat bg-contain bg-center'
      >
      </div>
      <div class='col-span-1 grid place-content-center'>
        <h1 class='text-orange font-semibold text-4xl text-center'>
          Project Goals
        </h1>

        <div class='py-10 px-16 mt-6 bg-white rounded-[54px]'>
          <ul class='app-definitions font-mitr'>
            <li class='mb-4'>รวบรวมผลิตภัณฑ์บำรุงผิวต่างๆ ไว้ในแอพเดียว</li>
            <li class='mb-4'>
              ช่วยให้คุณสามารถเลือก Skincare ให้ตรงกับสภาพผิวและปัญหาผิวต่างๆ
              ได้อย่างตรงจุด
            </li>
            <li class='mb-4'>
              ช่วยคุณจัด Skincare Routine เรียงลำดับขั้นตอนการใช้ได้อย่างถูกต้อง
            </li>
            <li>
              บันทึกและติดตามผลลัพธ์การใช้งานในแต่ละวันช่วยให้
              เห็นถึงความเปลี่ยนแปลงของสภาพผิวอย่างต่อเนื่อง
            </li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <section class='mt-28'>
    <div class='mx-48'>
      <h1 class='text-orange font-semibold text-4xl text-center'>
        Design Process
      </h1>
      <DesignProcess />
    </div>
  </section>

  <section class='mt-28'>
    <div class='mx-48'>
      <h1 class='text-orange font-semibold text-4xl text-left'>
        User Interview
      </h1>
      <div class='mt-14'>
        <InterviewTable />
      </div>
    </div>
  </section>

  <section class='mt-28'>
    <div class='mx-48'>
      <h1 class='text-orange font-semibold text-4xl text-left'>Empathy map</h1>
      <div class='mt-14'>
        <EmpathyMap />
      </div>
    </div>
  </section>

  <section class='mt-28'>
    <div class='mx-48'>
      <h1 class='text-orange font-semibold text-4xl text-left'>User Persona</h1>
      <div class='mt-14'>
        <Persona />
      </div>
    </div>
  </section>

  <section class='mt-28'>
    <div class='mx-48'>
      <h1 class='text-orange font-semibold text-4xl text-left'>
        User JourneyMap
      </h1>
      <div class='mt-14'>
        <UserJourneyMap />
      </div>
    </div>
  </section>

  <section class='mt-28'>
    <div class='mx-48'>
      <h1 class='text-orange font-semibold text-4xl text-center'>App Map</h1>
      <div class='mt-14'>
        <img src={appMapImg} alt='App map' />
      </div>
    </div>
  </section>

  <section class='mt-28'>
    <div class='mx-48'>
      <h1 class='text-orange font-semibold text-4xl text-center'>
        User Flow / Wireframe
      </h1>
      <div class='mt-14'>
        <img src={wireFrameImg} alt='User flow / Wireframe' />
      </div>
    </div>
  </section>

  <section class='mt-28'>
    <div class='mx-48'>
      <h1 class='text-orange font-semibold text-4xl text-center'>
        Design System
      </h1>
      <div class='mt-14'>
        <DesignSystem />
      </div>
    </div>
  </section>

  <style>
    .app-definitions {
      list-style-type: '\2713';
    }

    .app-definitions li {
      text-indent: 8px;
    }
  </style>
</Layout>
