---
import Layout from '../layouts/Layout.astro'
import profilePic from '../images/profile-pic.png'
import project1Img from '../images/project1.png'
import project2Img from '../images/project2.png'
import project3Img from '../images/project3.png'
import ProjectPreview from '../components/ProjectPreview.astro'
import Header from '../layouts/Header.astro'

const project1 = {
  title: '01 Skinique',
  description: 'An application for create a skincare routine as unique as you.',
  imgSrc: project1Img,
  alt: 'Project 1',
  slug: 'skinique',
}

const project2 = {
  title: '02 Room service',
  description:
    'A room service application for hotel. Give your guest the best stay in your hotel.',
  imgSrc: project2Img,
  alt: 'Project 2',
  slug: 'room_service',
  extUrl:
    'https://www.figma.com/proto/MHl7vqMpCqT4GQdPDrlM5L/Room-Service-Application?node-id=42%3A892&scaling=min-zoom&page-id=42%3A891&starting-point-node-id=42%3A892',
}

const project3 = {
  title: '03 LookForRent',
  description: 'User Interface design for online dress rental website. ',
  imgSrc: project3Img,
  alt: 'Project 3',
  slug: 'look_for_rent',
  extUrl:
    'https://www.figma.com/file/3HOYJFph3w075vWmdGuvQj/Loolforrent?node-id=5%3A53&t=m8E0ILh5TA0T0XQM-1',
}
---

<Layout title="Kasira's Protfolio">
  <Header />
  <main>
    <section
      class='flex justify-center max-sm:flex-col-reverse max-sm:flex-wrap mt-20 bg-rainbow1 bg-no-repeat bg-transparent w-3/5 max-sm:w-auto mx-auto'
    >
      <div
        class='basis-[580px] max-sm:basis-[531px] h-[435px] flex flex-col grow-0 shrink-0'
      >
        <h1 id='greeting' class='text-8xl leading-79 max-sm:text-center'>
          <!-- Hello <br /> I am Kasira -->
        </h1>
        <div class='grid grid-cols-3 grow'>
          <div
            class='bg-star bg-no-repeat bg-transparent bg-top-center col-span-1'
          >
          </div>
          <p class='col-span-2 mt-5 text-lg font-extralight'>
            Experienced interior designer eager to bring skills to UX/UI design.
            Passionate about creating intuitive, engaging digital experiences.
          </p>
        </div>
      </div>

      <aside class='max-sm:mx-auto'>
        <p class='uppercase text-center tracking-widest mb-2 max-sm:hidden'>
          Portfolio
        </p>
        <figure
          class='w-[230px] h-[300px] box-border rounded-[104px] flex place-content-center p-4 bg-frame bg-transparent bg-center bg-no-repeat'
        >
          <img src={profilePic} alt='Profile picture.' />
        </figure>
      </aside>
    </section>

    <section
      id='projects'
      class='relative -top-6 bg-rainbow3 bg-no-repeat bg-transparent bg-right-bottom bg-contain'
    >
      <div class='flex items-center'>
        <hr class='grow border border-black border-l-0 border-r-0 border-b-0' />
        <h2 class='text-5xl uppercase px-7'>Projects</h2>
        <hr class='grow border border-black border-l-0 border-r-0 border-b-0' />
      </div>

      <ProjectPreview
        className='bg-rainbow2 bg-no-repeat bg-transparent bg-contain bg-left-top'
        title={project1.title}
        description={project1.description}
        imgSrc={project1.imgSrc}
        alt={project1.alt}
        slug={project1.slug}
      />

      <ProjectPreview
        reverse
        title={project2.title}
        description={project2.description}
        imgSrc={project2.imgSrc}
        alt={project2.alt}
        slug={project2.slug}
        extUrl={project2.extUrl}
      />

      <ProjectPreview
        title={project3.title}
        description={project3.description}
        imgSrc={project3.imgSrc}
        alt={project3.alt}
        slug={project3.slug}
        extUrl={project3.extUrl}
      />
    </section>

    <section
      id='contact'
      class='mt-20 w-full float-right bg-rainbow4 bg-no-repeat bg-transparent bg-left-bottom'
    >
      <div class='flex items-center'>
        <hr class='grow border border-black border-l-0 border-r-0 border-b-0' />
        <h2 class='text-5xl uppercase px-7'>Contact</h2>
        <hr class='grow border border-black border-l-0 border-r-0 border-b-0' />
      </div>

      <div class='flex flex-wrap justify-center mt-11 gap-48'>
        <div
          class='arch-container border border-black bg-arch bg-no-repeat bg-transparent bg-bottom-center'
        >
        </div>

        <div class='my-auto'>
          <div class='flex flex-col gap-2'>
            <h3 class='text-2xl uppercase'>Email address</h3>
            <p>kasira.jtwk@gmail.com</p>
          </div>

          <div class='flex flex-col gap-2 mt-12'>
            <h3 class='text-2xl uppercase'>Phone number</h3>
            <p>(+66) 94 169 6654</p>
          </div>
        </div>
      </div>
    </section>
  </main>

  <style>
    @font-face {
      font-family: 'BlackGold';
      src: url('/fonts/BlackGoldRegular.woff2') format('woff2'),
        url('/fonts/BlackGoldRegular.woff') format('woff');
      font-weight: normal;
      font-style: normal;
      font-display: swap;
    }

    h1,
    h2,
    h3 {
      font-family: 'BlackGold', sans-serif;
    }

    .arch-container {
      width: 357px;
      height: 361px;
      border-radius: 172px 172px 0px 0px;
      padding: 48px 58px 0px 58px;
    }
  </style>
</Layout>

<script>
  window.addEventListener('DOMContentLoaded', async () => {
    const content = 'Hello\nI am Kasira'.split('')

    let cursor = 0
    const t = setInterval(() => {
      const el = document.querySelector('#greeting') as HTMLElement
      const char = content[cursor]
      if (char === undefined) {
        clearInterval(t)

        return
      }

      el.innerHTML += char === '\n' ? '<br />' : char

      cursor += 1
    }, 80)
  })
</script>
